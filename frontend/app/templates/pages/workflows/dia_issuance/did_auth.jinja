{% extends('layouts/base.min.jinja') %}
{% block page %}
<div class="container-tight">
    {% include('components/brand-header.jinja') %}
    <form method="post">
        <div class="card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-4">
                        <a href="#" class="btn">
                            <img src="{{ qrcode(exchange_url, error_correction='H', border=1) }}"
                                alt="BC DID Auth Request" class="rounded">
                        </a>
                    </div>
                    <div class="col">
                        <h3 class="card-title mb-1">
                            <div class="text-reset">Authenticate with your DID</div>
                        </h3>
                        <div class="text-secondary">
                            Claim your Digital Identity Anchor
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-sm btn-outline-dark w-100">Verify</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}