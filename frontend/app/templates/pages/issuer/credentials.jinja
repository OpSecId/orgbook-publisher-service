{% extends('layouts/base.min.jinja') %}
{% block page %}

<div class="container">
    {% include('components/brand.jinja') %}

    <div class="">

        <div class="card-header">
            <div>
                <div class="row align-items-center">
                    {# <div class="col-auto">
                        <span class="avatar avatar-1" style="background-image: url()"></span>
                    </div> #}
                    <div class="col">
                        <div class="card-title">Credential Management</div>
                        <div class="card-subtitle">{{ session['issuer']['email'] }}</div>
                    </div>
                </div>
            </div>
            <div class="card-actions">
                <div class="dropdown">
                    <a href="#" class="btn-action dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <!-- Download SVG icon from http://tabler.io/icons/icon/dots-vertical -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="icon icon-1">
                            <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                            <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                            <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
                        </svg>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end" style>
                        <a href="#" class="dropdown-item" data-bs-toggle="modal"
                            data-bs-target="#modal-register-credential">
                            Register Credential Type
                        </a>
                        <a href="#" class="dropdown-item" data-bs-toggle="modal"
                            data-bs-target="#modal-issue-credentials">
                            Issue Credential Batch
                        </a>
                        <a href="{{ url_for('issuer.logout') }}" class="dropdown-item"> Exit </a>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-vcenter table-mobile-md card-table">
                    <thead>
                        <tr>
                            <th>Document</th>
                            <th>Registration</th>
                            <th>Validity</th>
                            <th>Status</th>
                            <th>Latest</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            {% for credential in credentials %}
                            <td data-label="">
                                <div>{{ credential.get('sourceId') }}</div>
                                <div class="text-secondary"></div>
                            </td>
                            <td data-label="">
                                <div>{{ credential.get('registeredId') }}</div>
                                <div class="text-secondary"></div>
                            </td>
                            <td data-label="">
                                <div>{{ credential.get('validFrom').split('T')[0] }}</div>
                                <div class="text-secondary">{{ credential.get('validUntil').split('T')[0] }}</div>
                            </td>
                            <td data-label="">
                                {% if not credential.get('revoked') and not credential.get('suspended') %}
                                <span class="status-indicator status-green status-indicator-animated">
                                {% else %}
                                <span class="status-indicator status-red status-indicator-animated">
                                {% endif %}
                                    <span class="status-indicator-circle"></span>
                                    <span class="status-indicator-circle"></span>
                                    <span class="status-indicator-circle"></span>
                                </span>
                                <div class="text-secondary"></div>
                            </td>
                            <td data-label="">
                                {% if credential.get('latest') %}
                                <span class="status-indicator status-green status-indicator-animated">
                                {% else %}
                                <span class="status-indicator status-red status-indicator-animated">
                                {% endif %}
                                    <span class="status-indicator-circle"></span>
                                    <span class="status-indicator-circle"></span>
                                    <span class="status-indicator-circle"></span>
                                </span>
                            </td>
                            {% endfor %}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{% endblock %}