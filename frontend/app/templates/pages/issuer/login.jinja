{% extends('layouts/base.min.jinja') %}
{% block page %}
<div class="container-tight">
    {% include('components/brand.jinja') %}
    <div class="card">
        <form method="post">
            {{ form_login.csrf_token }}
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-4">
                        <img src="{{ qrcode(session['pres_ex_url'], error_correction='H', border=1) }}" alt=""
                            class="rounded">
                    </div>
                    <div class="col">
                        <h3 class="card-title mb-1">
                            <div class="text-reset">Issuer Dashboard</div>
                        </h3>
                        <div class="text-secondary">
                            Manage Credentials
                        </div>
                        <div class="mt-3">
                            {{ form_login.submit(class="btn btn-sm btn-outline-dark w-100") }}
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="alert alert-info alert-dismissible mt-3" role="alert">
        <div class="d-flex">
            <div>
                <!-- Download SVG icon from http://tabler.io/icons/icon/info-circle -->
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="icon alert-icon icon-2">
                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                    <path d="M12 9h.01"></path>
                    <path d="M11 12h1v4h1"></path>
                </svg>
            </div>
            <div>{{ session.get('pres_ex_url') }}</div>
        </div>
        <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
    </div>
</div>
{% endblock %}