<div class="modal modal-blur fade" id="modal-issue-credentials" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data">
                {{ form_credential_issuance.csrf_token }}
                <div class="modal-header">
                    <h5 class="modal-title">Issue Credential Batch</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        {{ form_credential_issuance.credential_type.label(class="form-label") }}
                        {{ form_credential_issuance.credential_type(class="form-select") }}
                    </div>
                    <div class="mb-3">
                        {{ form_credential_issuance.csv_file_issue(class="form-control") }}
                    </div>
                    {# <div class="mb-3">
                        {{ form_credential_issuance.expiration.label(class="form-label") }}
                        {{ form_credential_issuance.expiration() }}
                    </div> #}
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-link link-secondary btn-3" data-bs-dismiss="modal">
                        Cancel
                    </a>
                    {{ form_credential_issuance.submit_issue(class="btn btn-primary btn-5 ms-auto") }}
                </div>
            </form>
        </div>
    </div>
</div>